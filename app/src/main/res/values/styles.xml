<resources>
    <!-- Tema usado en general -->
    <style name="DefaultTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <!-- Tema usado para la pantalla del Login -->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:amPmBackgroundColor">@color/colorPrimary</item>
    </style>
    <!-- Tema usado para la pantalla del Splash -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/colorNordokod</item>
        <item name="android:navigationBarColor">@color/colorNordokod</item>
        <item name="android:background">@color/colorNordokod</item>
    </style>
</resources>
