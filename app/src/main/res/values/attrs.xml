<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="colors">
        <!-- Primary colors -->
        <attr name="primaryColor"           format="color"/>
        <attr name="primaryLightColor"      format="color"/>
        <attr name="primaryDarkColor"       format="color"/>
        <attr name="primaryTextColor"       format="color"/>
        <attr name="onPrimaryColor"         format="color"/>
        <!-- Secondary colors -->
        <attr name="secondaryColor"         format="color"/>
        <attr name="secondaryLightColor"    format="color"/>
        <attr name="secondaryDarkColor"     format="color"/>
        <attr name="secondaryTextColor"     format="color"/>
        <attr name="onSecondaryColor"       format="color"/>
        <attr name="onSecondaryTextColor"   format="color"/>
        <!-- Background colors -->
        <attr name="backgroundColor"        format="color"/>
        <attr name="onBackgroundColor"      format="color"/>
        <!-- Surface colors -->
        <attr name="surfaceColor"           format="color"/>
        <attr name="onSurfaceColor"         format="color"/>
    </declare-styleable>
</resources>