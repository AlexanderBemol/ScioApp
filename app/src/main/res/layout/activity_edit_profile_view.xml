<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EditProfileView"
    android:padding="@dimen/activity_padding"

    >

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/EditProfile_TV_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_title_edit_profile"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_title"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/EditProfile_Photo"
        app:layout_constraintTop_toTopOf="parent"


        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/EditProfile_Photo"
        android:layout_width="@dimen/first_configuration_photo_size"
        android:layout_height="@dimen/first_configuration_photo_size"

        android:layout_marginTop="@dimen/space_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EditProfile_TV_Title"

        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorImage_FirstConfiguration"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/EditProfile_TV_ChangeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_1"
        android:text="Cambiar  Foto"
        style="@style/TV_changeImage"


        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EditProfile_Photo"

        />

    <android.support.v7.widget.AppCompatTextView
    android:id="@+id/EditProfile_TV_Name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_3"
    android:text="Nombre"
    android:textStyle="bold"

    app:layout_constraintTop_toBottomOf="@id/EditProfile_TV_ChangeImage"
    app:layout_constraintLeft_toLeftOf="parent"
    />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/EditProfile_ET_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_1"
        android:hint="@string/hint_name_edittext"

        app:layout_constraintTop_toBottomOf="@id/EditProfile_TV_Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/EditProfile_TV_Birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de Nacimiento"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/space_2"

        app:layout_constraintTop_toBottomOf="@id/EditProfile_ET_Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/EditProfile_ET_Birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_1"
        android:editable="false"

        app:layout_constraintTop_toBottomOf="@id/EditProfile_TV_Birthday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/EditProfile_TV_education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_2"
        android:text="Nivel de Estudios"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/EditProfile_ET_Birthday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Spinner
        android:id="@+id/EditProfile_Sp_education"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_1"

        app:layout_constraintTop_toBottomOf="@id/EditProfile_TV_education"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>