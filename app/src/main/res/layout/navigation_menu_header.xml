<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?backgroundColor"
    android:padding="@dimen/activity_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CIV_Photo"
        android:layout_width="@dimen/navigation_photo_size"
        android:layout_height="@dimen/navigation_photo_size"
        android:src="@drawable/default_photo"
        android:layout_marginBottom="@dimen/space_1"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/TV_Name"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TV_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mayuko LÃ³pez"
        android:fontFamily="sans-serif-medium"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/TV_Membership"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TV_Membership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FREE"
        android:textSize="@dimen/text_size_small"
        android:fontFamily="sans-serif-light"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>