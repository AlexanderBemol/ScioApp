<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed"
    android:padding="@dimen/activity_padding"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/first_configuration_photo_size"
        android:layout_height="@dimen/first_configuration_photo_size"
        android:src="@drawable/photo_mayuko"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/title"

        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorImage_FirstConfiguration"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgCamera"
        android:layout_width="@dimen/first_configuration_ic_size"
        android:layout_height="@dimen/first_configuration_ic_size"
        android:tint="@color/colorImage_FirstConfiguration"
        android:layout_marginTop="@dimen/space_1"

        app:srcCompat="@drawable/ic_camera"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title"
        style="@style/FirstConfiguration_Title"
        android:text="@string/title_photo_first_configuration"
        android:layout_marginBottom="@dimen/space_2"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/TV_Description"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/TV_Description"
        style="@style/FirstConfiguration_Description"
        android:layout_marginBottom="@dimen/first_configuration_max_space"

        android:text="@string/description_photo_first_configuration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>