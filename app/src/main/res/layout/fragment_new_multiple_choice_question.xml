<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.NewMultipleChoiceQuestionFragment"
    >

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundColor"
        android:padding="@dimen/activity_padding"
        >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/FNewMCQuestion_TV_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_title_fragment_new_question"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            style="@style/titleTextView"
            />
        <!-- ========================================================================== Pregunta -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/FNewMCQuestion_TV_Title_Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_title_question"
            android:layout_marginTop="@dimen/space_2"

            app:layout_constraintTop_toBottomOf="@id/FNewMCQuestion_TV_Title"
            app:layout_constraintLeft_toLeftOf="parent"

            style="@style/normalTextView"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/FNewMCQuestion_ET_Question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/txt_ET_question_hint"

            app:layout_constraintTop_toBottomOf="@id/FNewMCQuestion_TV_Title_Question"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            style="@style/EditText_Normal"
            />

        <!-- ========================================================================== Opciones -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/FNewMCQuestion_TV_Title_Options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_title_TV_Options"
            android:layout_marginTop="@dimen/space_2"

            app:layout_constraintTop_toBottomOf="@id/FNewMCQuestion_ET_Question"
            app:layout_constraintLeft_toLeftOf="parent"

            style="@style/normalTextView"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/FNewMCQuestion_TV_Hint_Options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_hint_TV_Options"

            app:layout_constraintTop_toBottomOf="@id/FNewMCQuestion_TV_Title_Options"
            app:layout_constraintLeft_toLeftOf="parent"

            style="@style/hintTextview"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/FNewMCQuestion_ET_Option_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/txt_ET_option_hint"
            android:background="@xml/background_card_round"
            android:layout_marginTop="@dimen/space_2"
            android:layout_marginEnd="@dimen/space_1"

            app:layout_constraintTop_toBottomOf="@id/FNewMCQuestion_TV_Hint_Options"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/FNewMCQuestion_Switch_Option_1"

            style="@style/EditText_Option"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/FNewMCQuestion_Switch_Option_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="@id/FNewMCQuestion_ET_Option_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/FNewMCQuestion_ET_Option_1"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/FNewMCQuestion_ET_Option_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/txt_ET_option_hint"
            android:background="@xml/background_card_round"
            android:layout_marginTop="@dimen/space_1"
            android:layout_marginEnd="@dimen/space_1"

            app:layout_constraintTop_toBottomOf="@id/FNewMCQuestion_ET_Option_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/FNewMCQuestion_Switch_Option_2"

            style="@style/EditText_Option"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/FNewMCQuestion_Switch_Option_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="@id/FNewMCQuestion_ET_Option_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/FNewMCQuestion_ET_Option_2"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/FNewMCQuestion_ET_Option_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/txt_ET_option_hint"
            android:background="@xml/background_card_round"
            android:layout_marginTop="@dimen/space_1"
            android:layout_marginEnd="@dimen/space_1"

            app:layout_constraintTop_toBottomOf="@id/FNewMCQuestion_ET_Option_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/FNewMCQuestion_Switch_Option_3"

            style="@style/EditText_Option"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/FNewMCQuestion_Switch_Option_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="@id/FNewMCQuestion_ET_Option_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/FNewMCQuestion_ET_Option_3"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/FNewMCQuestion_ET_Option_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/txt_ET_option_hint"
            android:background="@xml/background_card_round"
            android:layout_marginTop="@dimen/space_1"
            android:layout_marginEnd="@dimen/space_1"

            app:layout_constraintTop_toBottomOf="@id/FNewMCQuestion_ET_Option_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/FNewMCQuestion_Switch_Option_4"

            style="@style/EditText_Option"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/FNewMCQuestion_Switch_Option_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="@id/FNewMCQuestion_ET_Option_4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/FNewMCQuestion_ET_Option_4"
            />

        <!-- =========================================================================== Botones -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/FNewMCQuestion_BTN_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_BTN_Cancel"
            android:layout_marginEnd="@dimen/space_2"

            app:layout_constraintTop_toTopOf="@id/FNewMCQuestion_BTN_Create"
            app:layout_constraintRight_toLeftOf="@id/FNewMCQuestion_BTN_Create"
            app:layout_constraintBottom_toBottomOf="@id/FNewMCQuestion_BTN_Create"

            style="@style/cancelButton"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/FNewMCQuestion_BTN_Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_BTN_Create"
            android:layout_marginTop="@dimen/space_3"

            app:layout_constraintTop_toBottomOf="@id/FNewMCQuestion_ET_Option_4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            style="@style/normalButton"
            />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>