<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/activity_margin"
    tools:context=".View.LoginActivity">

    <!-- IMAGEN -->
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/scio_logo"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editUsuario"
        />

    <!-- EDIT TEXT USUARIO -->
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:hint="@string/hint_editUser"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/colorAccent"
        android:layout_marginBottom="@dimen/med_space"
        android:singleLine="true"
        android:textSize="@dimen/normal_text"
        android:padding="10dp"
        android:textAlignment="center"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editContraseña"
        />



    <!-- EDIT TEXT CONTRASEÑA -->
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editContraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:hint="@string/hint_editPassword"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="@dimen/normal_text"
        android:padding="10dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtRecuperar"
        />

    <!-- TEXTO RECUPERAR CONTRASEÑA -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtRecuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_recover"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="@dimen/max_space"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSesion"
        />

    <!-- BOTÓN INICIAR SESIÓN -->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_btnLogin"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/boton_redondo_solido"
        android:layout_marginBottom="@dimen/med_space"
        android:textSize="@dimen/button_text"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnRegistrarse"

        style="?android:attr/borderlessButtonStyle"
        />

    <!-- BOTÓN REGISTRARSE -->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_btnSignin"
        android:textColor="@color/colorAccent"
        android:background="@drawable/contorno_redondo"
        android:layout_marginBottom="@dimen/med_space"
        android:textSize="@dimen/button_text"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtConectar"

        style="?android:attr/borderlessButtonStyle"
        />

    <!-- TEXTO OPCIONES -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtConectar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_options"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="@dimen/min_space"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cajaRedesSociales"
        />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/cajaRedesSociales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        >

        <!-- OPCIÓN FACEBOOK -->
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btnFacebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/boton_redondo_solido"
            android:src="@drawable/facebook_icon"
            android:scaleType="fitCenter"
            android:padding="6dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            />

        <!-- OPCIÓN GOOGLE -->
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btnGoogle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/boton_redondo_solido"
            android:src="@drawable/google_icon"
            android:scaleType="fitCenter"
            android:padding="6dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.constraint.ConstraintLayout>