<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundColor"
    android:paddingTop="@dimen/padding_top_bottom_dialog_loading"
    android:paddingStart="@dimen/padding_start_end_dialog_loading"
    android:paddingEnd="@dimen/padding_start_end_dialog_loading"
    android:paddingBottom="@dimen/padding_top_bottom_dialog_loading"
    tools:context=".kt.ui.loading.LoadingView"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/DLoading_Icon"
        android:layout_width="@dimen/icon_size_loading"
        android:layout_height="@dimen/icon_size_loading"
        android:tint="?attr/onBackgroundColor"
        android:padding="@dimen/space_1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:srcCompat="@drawable/ic_sendo_isologo"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/DLoading_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_loading"
        android:layout_marginTop="@dimen/space_2"

        app:layout_constraintTop_toBottomOf="@id/DLoading_Icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>