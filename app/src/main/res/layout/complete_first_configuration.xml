<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurple"
    android:padding="@dimen/activity_padding"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/IV_Image"
        android:layout_width="@dimen/first_configuration_img_size"
        android:layout_height="@dimen/first_configuration_img_size"
        android:tint="@color/colorImage_FirstConfiguration"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:srcCompat="@drawable/ic_sad_face"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        style="@style/FirstConfiguration_Title"
        android:text="@string/title_incomplete_first_configuration"
        android:layout_marginBottom="@dimen/space_2"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/TV_Description"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TV_Description"
        style="@style/FirstConfiguration_Description"
        android:layout_marginBottom="@dimen/first_configuration_max_space"

        android:text="@string/description_incomplete_first_configuration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>