<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed"
    android:padding="@dimen/activity_padding"
    >

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="@dimen/first_configuration_img_size"
        android:layout_height="@dimen/first_configuration_img_size"
        android:tint="@color/colorAccent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:srcCompat="@drawable/complete"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title"
        style="@style/title_first_configuration"
        android:text="@string/title_done_first_configuration"
        android:layout_marginBottom="@dimen/med_space"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/description"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/description"
        style="@style/description_first_configuration"
        android:layout_marginBottom="@dimen/first_configuration_max_space"

        android:text="@string/description_done_first_configuration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>