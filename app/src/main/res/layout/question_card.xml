<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/QCard_CL_Question"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@xml/background_card_round"
    android:padding="@dimen/activity_padding"
    android:layout_marginBottom="@dimen/space_1"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/QCard_IV_Icon"
        android:layout_width="50dp"
        android:layout_height="50dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:srcCompat="@drawable/ic_multiple_question_art"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/QCard_TV_Question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_2"
        android:text="-"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/QCard_IV_Icon"
        app:layout_constraintRight_toRightOf="parent"

        style="@style/titleGuideTextView"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/QCard_TV_Question_Type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_2"
        android:text="-"

        app:layout_constraintTop_toBottomOf="@id/QCard_TV_Question"
        app:layout_constraintLeft_toRightOf="@id/QCard_IV_Icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        style="@style/infoGuideTextView"
        />
</androidx.constraintlayout.widget.ConstraintLayout>