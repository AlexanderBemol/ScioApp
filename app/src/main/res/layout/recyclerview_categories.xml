                android:id="@+id/IV_Socials"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="@dimen/space_2"
                android:tint="?attr/iconNormalColor"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/TV_Socials"
                app:layout_constraintRight_toRightOf="@id/TV_Socials"
                app:layout_constraintBottom_toTopOf="@id/TV_Socials"
                app:srcCompat="@drawable/ic_globe"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/TV_Socials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_social_sciences"

                app:layout_constraintTop_toBottomOf="@id/IV_Socials"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                style="@style/categoryTextView"
                />
        </android.support.constraint.ConstraintLayout>

        <!-- ======================================================================================= Deportes -->
