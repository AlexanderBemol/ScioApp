<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".old.view.HomeFragment"
    android:padding="@dimen/activity_padding"
    android:background="?attr/backgroundColor">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/FHome_TV_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inicio"
        android:gravity="center"
        style="@style/titleTextView"

        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_padding"
        android:background="@drawable/background_card_round"
        android:layout_marginTop="@dimen/space_2"

        app:layout_constraintTop_toBottomOf="@id/FHome_TV_Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/FHome_TV_ActivateStudyMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activar modo de estudio"
            android:textSize="@dimen/text_size_normal"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/FHome_SW_ActivateStudyMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="@id/FHome_TV_ActivateStudyMode"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/FHome_TV_ActivateStudyMode"
            >
        </androidx.appcompat.widget.SwitchCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>