<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".kt.ui.questions.QuestionsView">

    <LinearLayout
        android:id="@+id/FQuestions_ItemGuide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/FQuestions_IV_Icon"
            android:layout_width="@dimen/icon_category_size"
            android:layout_height="@dimen/icon_category_size"
            android:tint="@color/secondaryColor"
            android:layout_gravity="center_vertical"

            app:srcCompat="@drawable/ic_flask" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_2"
            android:paddingEnd="@dimen/space_2"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/FQuestions_TV_Topic"
                style="@style/titleGuideTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Ecuaciones diferenciales"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/FQuestions_TV_Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exacts"

                style="@style/infoGuideTextView"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/FQuestions_TV_Days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faltan 24 dÃ­as."

                style="@style/infoGuideTextView"
                />

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/FQuestions_Divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/space_2"
        android:background="?attr/primaryLightColor"

        android:layout_marginHorizontal="@dimen/activity_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FQuestions_ItemGuide" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/FQuestions_RV_Questions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/space_2"
        android:layout_marginStart="@dimen/activity_padding"
        android:layout_marginEnd="@dimen/activity_padding"

        app:layout_constraintTop_toBottomOf="@id/FQuestions_Divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/question_card"/>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_question"
        />
</androidx.constraintlayout.widget.ConstraintLayout>